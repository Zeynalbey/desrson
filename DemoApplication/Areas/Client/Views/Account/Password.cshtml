@using DemoApplication.Areas.Client.ViewModels.Authentication
@model PasswordUpdateVIewModel

<div class="col-lg-9 col-12 mt--30 mt-lg--0">
    <div class="myaccount-content">
        <h3>Account Details</h3>
        <div class="account-details-form">
            <form method="POST" asp-route="client-account-password">
                <div class="row">
                    <div class="col-12  mb--30">
                        <h4>Password change</h4>
                    </div>
                    <div class="col-5  mb--30">
                        <input asp-for="OlderPassword" placeholder="Old password">
                        <span asp-validation-for="OlderPassword" class="text-danger"></span>
                    </div>
                    <div class="col-5  mb--30">
                        <input asp-for="NewPassword" placeholder="New Password">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn--primary">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>